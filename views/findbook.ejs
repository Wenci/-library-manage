<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>home</title>
	<link rel="stylesheet" type="text/css" href="../build/components/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="../build/components/awesome/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="../build/css/userfindbook.min.css">
</head>
<body>
	<% include userTop %>
	<div class="container-fluid search-box">
		<div class="col-xs-12">
			<div class="row search-group">
		      <div class="input-group col-xs-7 col-xs-offset-2">
		        <div class="input-group-btn">
		          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="search-way">
		            <span>书名搜索&nbsp;</span>
		            <span class="caret"></span>
		          </button>
		          <ul class="dropdown-menu" id="drop">
		            <li class="active"><a href="javascript:void(0)">书名搜索</a></li>
		            <li><a href="javascript:void(0)">编号搜索</a></li>
		          </ul>
		        </div><!-- /btn-group -->
		        <input type="text" value="<%= keyName %>" class="form-control" id="search-key">
		      </div>
		    </div>
		</div>
	</div>
	<div class="container-fluid results-box">
		<div class="row">
	      <div class="col-xs-7 col-xs-offset-2 book-list">
	        <table class="table table-bordered table-hover" id="results">
	          <thead>
	            <tr>
	              <th>#</th>
	              <th>书名</th>
	              <th>作者</th>
	              <th>编号</th>
	              <th>标准书号</th>
	              <th class="danger">剩余数量</th>
	              <th class="info">操作</th>
	            </tr>
	          </thead>
	          <tbody>
	          	<%
	          		for(var i = 0;i<book.length;i++){
	          	%>
	          		<tr>
	          			<td><%= i+1 %></td>
	          			<td><%= book[i].name %></td>
	          			<td><%= book[i].author %></td>
	          			<td><%= book[i].lib_id %></td>
	          			<td><%= book[i].isbn %></td>
	          			<td><%= book[i].num-book[i].borr_num %></td>
	          			<td>
							<a href="javascript:void(0)" class="btn btn-primary btn-xs"  data-id="<%= book[i].id %>">借阅</a>
	          			</td>
	          		</tr>
				<%
	          		}
	          	%>
	          </tbody>
	        </table>
	      </div>
	    </div>
	</div>
	<!-- all your content here -->
 
	<a href="#0" class="cd-top">Top</a>
 
	<!-- link to scripts here -->
	<div class="confirm" id="confirm">
		<div class="container-fluid">
			<div class="row">
				<form class="form-inline" id="pass-form">
				  <div class="form-group">
				    <label for="password">请输入密码:</label>
				    <input type="password" class="form-control" id="password" placeholder="密码">
				  </div>
				  <button type="submit" class="btn btn-default" id="submit">确定</button>
				</form>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="../build/components/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="../build/components/bootstrap/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="../build/js/userfindbook.min.js"></script>
	<script type="text/javascript" src="../build/components/layer/src/layer.js"></script>

</body>
</html>